<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <Button
        android:id="@+id/btn_dog"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/reward_datbiet"
        android:text="Đóng"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_luoichoi" />

    <Button
        android:id="@+id/button5"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/reward_datbiet"
        android:text="Cửa hàng"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_5050_dis"
        android:layout_width="66dp"
        android:layout_height="81dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:srcCompat="@drawable/help_5050_disable" />

    <ImageView
        android:id="@+id/img_hoiykienkhangia_dis"
        android:layout_width="66dp"
        android:layout_height="81dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_5050_dis"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:srcCompat="@drawable/help_hoikhangia_disable" />

    <ImageView
        android:id="@+id/img_tuvantaicho_dis"
        android:layout_width="66dp"
        android:layout_height="81dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_hoiykienkhangia_dis"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:srcCompat="@drawable/help_phonecall_disable" />

    <ImageView
        android:id="@+id/img_call"
        android:layout_width="66dp"
        android:layout_height="81dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_tuvantaicho_dis"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:srcCompat="@drawable/help_tuvan_disable" />

    <ImageView
        android:id="@+id/img_luoichoi"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_5050_dis"
        app:srcCompat="@drawable/icn_luotchoi" />
</androidx.constraintlayout.widget.ConstraintLayout>